{% extends 'base.html.twig' %}

{% block page_title %}
    <h1>Forgot password</h1>
{% endblock %}

{% block body %}
    {{ form_start(form)}}
    {{ form_errors(form)}}
    {{ form_row(form.email)}}
    {{ form_rest(form)}}

    <button type="submit">Request password</button>

    {{ form_end(form)}}
{% endblock %}