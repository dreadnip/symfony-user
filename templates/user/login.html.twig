{% extends 'base.html.twig' %}

{% block page_title %}
    <h1>{{ 'Sign in'|trans }}</h1>
    <p>{{ 'No account?'|trans }} <a href="{{ url('register') }}">{{ 'Sign up here'|trans }}</a></p>
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(form)}}
    {{ form_row(form.email)}}
    {{ form_row(form.password)}}

    <small class="form-text text-muted">
        <a href="{{ url('forgot_password') }}">{{ 'I forgot my password'|trans }}</a>
    </small>

    {{ form_rest(form)}}

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> {{ 'Remember me'|trans }}
        </label>
    </div>

    <button type="submit">{{ 'Sign in'|trans }}</button>

    {{ form_end(form)}}
{% endblock %}